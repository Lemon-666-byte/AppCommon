<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/themeBg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1dp"
        android:background="@color/line" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50dp"
        android:background="@drawable/shape_select_item_bg"
        android:text="拍照"
        android:textColor="#585858"
        android:textSize="@dimen/dimens_18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimens_50dp"
        android:layout_marginRight="@dimen/dimens_50dp"
        android:background="#f2f2f2" />


    <Button
        android:id="@+id/btnPicture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50dp"
        android:background="@drawable/shape_select_item_bg"
        android:text="从相册中选取"
        android:textColor="#585858"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_2dp"
        android:background="#f3f3f3" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50dp"
        android:background="@drawable/shape_select_item_bg"
        android:text="取消"
        android:textColor="#585858"
        android:textSize="@dimen/dimens_18dp" />
</LinearLayout>
